@{
    ViewData["title"] = "Register";

}
<div class="row">
    <div class="register-container col-12">
        <style>
            .row {
                display: flex;
                justify-content: center; /* Center horizontally */
                align-items: center; /* Center vertically */
                height: 100%; /* Take up full height of the viewport */
            }
            </style>
        <h1 class="d-flex align-items-center justify-content-center pb-4">
            Would you like to
        </h1>


        <div class="d-flex align-items-center justify-content-center pb-4">
            <a type="button" class="btn fw-bolder fa-lg gradient-custom-2 mb-3 btn-chef"
               asp-controller="Chef" asp-action="ChefRegister">Register as a Chef</a>
        </div>

        <div class="d-flex align-items-center justify-content-center pb-4">
            <h6>- Or -</h6>
        </div>

        <div class="d-flex align-items-center justify-content-center pb-4">
            <a type="button" class="btn fw-bolder fa-lg gradient-custom-2 mb-3 btn-customer"
               asp-controller="Customer" asp-action="CustomerRegister">Register as a Customer</a>
        </div>

    </div>
</div>